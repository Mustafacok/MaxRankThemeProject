@model List<BlgHaber>
@{
    ViewBag.Title = "Yönetim Paneli | Blog-Haber";
    Layout = "~/Areas/yonet/Views/Shared/_Layout.cshtml";
}

<script src="~/Areas/yonet/js/liste.js"></script>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Blog-Haber İşlemleri</h4>
            <hr />
            <div class="list-head-items">
                <div class="card-title text-info">
                    <span id="spnElemanBilgisi"></span>
                    <a class="btn btn-success btn-xs" href="~/yonet/blghaber/detay">
                        <i class="mdi mdi-plus">Yeni</i>
                    </a>
                    <button data-toggle="modal" data-target="#modalUyari0" class="btn btn-primary btn-xs" id="btnSil1">
                        <i class="mdi mdi-trash-can"></i>
                    </button>

                    <button style="display:none;" data-toggle="modal" data-target="#modalUyari1" class="btn btn-danger btn-xs" id="btnSil2">
                        <i class="mdi mdi-trash-can"></i>
                        <span style="font-size:16px;" class="badge-busy spEleman">0</span>
                    </button>
                </div>
                <div class="card-title text-info">
                    @Html.Raw(GenelAraclarBLL.PageSize("blghaber"))
                </div>
            </div>
            <div class="table-responsive pt-3" id="detayyukle">
                @{ Html.RenderAction("IndexDetay", "BlgHaber");}
            </div>
        </div>
    </div>
</div>
@{ Html.RenderAction("Uyari", "Home", new { name = "blghaber" });}




